<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="base.layout" template="/WEB-INF/views/layout/baseLayout.jsp">
	    <put-attribute name="header" value="/WEB-INF/views/layout/header.jsp" />
	    <put-attribute name="menu" value="" />
	    <put-attribute name="body" value="" />
	    <put-attribute name="main" value="" />
	    <put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp" />
  	</definition>
	
	<definition name="login.page" extends="base.layout">
    	<put-attribute name="body" value="/WEB-INF/views/common/login.jsp" />
  	</definition>
  	
  	<definition name="register.page" extends="base.layout">
    	<put-attribute name="body" value="/WEB-INF/views/common/register.jsp" />
  	</definition>
  	
  	<definition name="*.mainPage" extends="base.layout">
		<put-attribute name="menu" value="/WEB-INF/views/common/menu.jsp" />
    	<put-attribute name="main" value="/WEB-INF/views/common/{1}.jsp" />
  	</definition>
</tiles-definitions>
		

      